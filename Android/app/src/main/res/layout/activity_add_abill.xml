<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.kungfucat.tripsplit.AddABillActivity"
    android:orientation="vertical">
    
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Group :"
    android:textAppearance="?android:textAppearanceMedium"
    android:layout_margin="8dp"
    android:textColor="@color/colorAccent"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Type name of group"
    android:id="@+id/group_name"
    android:layout_margin="4dp"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Group Members :"
    android:textAppearance="?android:textAppearanceMedium"
    android:layout_margin="4dp"
    android:textColor="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

   <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="member1 name"
       android:id="@+id/editTextmember1"
       android:layout_margin="4dp"
       android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter amount paid"
            android:layout_margin="4dp"
            android:id="@+id/member_1_bill"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="member2 name"
        android:id="@+id/editTextmember2"
        android:layout_margin="4dp"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter amount paid"
        android:layout_margin="4dp"
        android:id="@+id/member_2_bill"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="member3 name"
        android:id="@+id/editTextmember3"
        android:layout_margin="4dp"
        android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter amount paid"
            android:layout_margin="4dp"
            android:id="@+id/member_3_bill"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="member4 name"
        android:id="@+id/editTextmember4"
        android:layout_weight="1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter amount paid"
                android:layout_margin="4dp"
                android:id="@+id/member_4_bill"/>

        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@color/toolbarColor"
        android:text="Submit"
        android:textColor="@color/white"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/camera_fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/ic_camera"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:tint="@color/white"
         />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.kungfucat.tripsplit.AddABillActivity"
    android:orientation="vertical">
    
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Group :"
    android:textAppearance="?android:textAppearanceLarge"
    android:layout_margin="8dp"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Type name of group"
    android:id="@+id/group_name"
    android:layout_margin="4dp"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Group Members :"
    android:textAppearance="?android:textAppearanceLarge"
    android:layout_margin="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

   <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Type member 1 name"
       android:id="@+id/editTextmember1"
       android:layout_margin="4dp"
       android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter amount paid"
            android:layout_margin="4dp"
            android:id="@+id/member_1_bill"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type member 2 name"
        android:id="@+id/editTextmember2"
        android:layout_margin="4dp"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter amount paid"
        android:layout_margin="4dp"
        android:id="@+id/member_2_bill"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type member 3 name"
        android:id="@+id/editTextmember3"
        android:layout_margin="4dp"
        android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter amount paid"
            android:layout_margin="4dp"
            android:id="@+id/member_3_bill"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type member 4 name"
        android:id="@+id/editTextmember4"
        android:layout_weight="1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter amount paid"
                android:layout_margin="4dp"
                android:id="@+id/member_4_bill"/>

        </LinearLayout>

</LinearLayout>
